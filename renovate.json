{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "group:monorepos",
    "group:recommended"
  ],
  "prHourlyLimit": 100,
  "pinDigests": true,
  "argocd": {
    "managerFilePatterns": [
      "/k8s/apps/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/.+\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "/k8s/apps/.+\\.yaml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\n\\s+\\S+?:\\s?\\'(?<currentValue>[^\\s\\@]+)(\\@(?<currentDigest>\\S+))?\\'"
      ]
    },
    {
      "customType": "regex",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "/k8s/apps/.+\\.yaml$/"
      ],
      "matchStrings": [
        "(?ms)^(?<indentation>\\s*)repository:\\s*'(?<packageName>[^']+)'[\\s]*?tag:\\s*'(?<currentValue>[^'@]+)(?:@(?<currentDigest>[^']+))?'",
        "https://github.com/renovatebot/renovate/issues/24559"
      ],
      "autoReplaceStringTemplate": "{{{indentation}}}repository: '{{packageName}}'\n{{{indentation}}}tag: '{{newValue}}{{#if isPinDigest}}@{{newDigest}}{{/if}}'",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "ignorePaths": [
    "k8s-old1/**"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "k8s/apps/app-of-apps-apps/*.yaml"
      ],
      "groupName": "{{{replace 'k8s\\/apps\\/app-of-apps-apps\\/(?<FileName>.*)\\.yaml' 'app $<FileName>' packageFile}}}"
    },
    {
      "matchFileNames": [
        "k8s/apps/app-of-infrastructure-apps/*.yaml"
      ],
      "groupName": "{{{replace 'k8s\\/apps\\/app-of-infrastructure-apps\\/(?<FileName>.*)\\.yaml' 'infrastructure $<FileName>' packageFile}}}"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-(?<compatibility>.+)(?<build>\\d+)-r(?<revision>\\d+))?$",
      "matchPackageNames": [
        "bitnami/{/,}**",
        "docker.io/bitnami/{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+\\-[a-z0-9]+)$"
    },
    {
      "matchPackageNames": [
        "ghcr.io/oliver006/redis_exporter"
      ],
      "enabled": true
    }
  ]
}
