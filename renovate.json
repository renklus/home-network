{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "group:monorepos",
    "group:recommended",
    ":disableRateLimiting"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/k8s/apps/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/k8s/apps/.+\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/apps/.+\\.yaml$/"
    ]
  },
  "ignorePaths": [
    "k8s-old1/**",
    "images/**"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "k8s/apps/app-of-apps-apps/*.yaml"
      ],
      "groupName": "{{{replace 'k8s\\/apps\\/app-of-apps-apps\\/(?<FileName>.*)\\.yaml' 'app $<FileName>' packageFile}}}"
    },
    {
      "matchFileNames": [
        "k8s/apps/app-of-infrastructure-apps/*.yaml"
      ],
      "groupName": "probably need to fall back to manual grouping since this does not work"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-(?<compatibility>.+)(?<build>\\d+)-r(?<revision>\\d+))?$",
      "matchPackageNames": [
        "bitnami/{/,}**",
        "docker.io/bitnami/{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+\\-[a-z0-9]+)$"
    },
    {
      "matchPackageNames": [
        "ghcr.io/oliver006/redis_exporter"
      ],
      "enabled": true
    }
  ]
}
