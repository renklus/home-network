{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor"
  ],
  "argocd": {
    "fileMatch": ["k8s/apps/.+\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["k8s/.+\\.yaml$"]
  },
  "helm-values": {
    "fileMatch": ["\\.yaml$"]
  },
  "ignorePaths": ["k8s/apps/app-of-infrastructure-apps/metallb-native.yaml"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePrefixes": ["bitnami/", "docker.io/bitnami/"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-(?<compatibility>.+)(?<build>\\d+)-r(?<revision>\\d+))?$"
    },
    {
      "matchPackageNames": ["plexinc/pms-docker"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+\\-[a-z0-9]+)$"
    },
    {
      "matchPackageNames": ["quay.io/metallb/controller", "quay.io/metallb/speaker", "quay.io/frrouting/frr", "metallb"],
      "groupName": "MetalLB"
    }
  ]
}
