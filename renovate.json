{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "group:monorepos",
    "group:recommended"
  ],
  "prHourlyLimit": 10,
  "argocd": {
    "managerFilePatterns": [
      "/k8s/apps/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/.+\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/k8s/apps/.+\\.yaml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\n\\s+\\S+?:\\s?\\'(?<currentValue>[^\\s\\@]+)(\\@(?<currentDigest>\\S+))?\\'"
      ]
    }
  ],
  "ignorePaths": [
    "k8s-old1/**"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "k8s/apps/app-of-apps-apps/*.yaml"
      ],
      "groupName": "{{{replace 'k8s\\/apps\\/app-of-apps-apps\\/(?<FileName>.*)\\.yaml' 'app' packageFile}}}"
    },
    {
      "matchPackageNames": [
        "/argocd/",
        "/argo-cd/"
      ],
      "groupName": "argocd"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-(?<compatibility>.+)(?<build>\\d+)-r(?<revision>\\d+))?$",
      "matchPackageNames": [
        "bitnami/{/,}**",
        "docker.io/bitnami/{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+\\-[a-z0-9]+)$"
    },
    {
      "matchPackageNames": [
        "quay.io/metallb/controller",
        "quay.io/metallb/speaker",
        "quay.io/frrouting/frr",
        "metallb"
      ],
      "groupName": "MetalLB"
    },
    {
      "matchPackageNames": [
        "hashicorp/vault-k8s",
        "hashicorp/vault",
        "hashicorp/vault-csi-provider",
        "vault"
      ],
      "groupName": "Hashicorp Vault"
    },
    {
      "matchPackageNames": [
        "vault-secrets-operator",
        "gcr.io/kubebuilder/kube-rbac-proxy",
        "hashicorp/vault-secrets-operator"
      ],
      "groupName": "Hashicorp Vault Secrets Operator"
    },
    {
      "matchPackageNames": [
        "ghcr.io/oliver006/redis_exporter"
      ],
      "enabled": true
    }
  ]
}
