{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "group:monorepos",
    "group:recommended",
    ":disableRateLimiting",
    ":docker"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/k8s/apps/.+\\.yaml$/",
      "/k8s-rancher/apps/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/k8s/apps/.+\\.yaml$/",
      "/k8s-rancher/apps/.+\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/apps/.+\\.yaml$/",
      "/k8s-rancher/apps/.+\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "/k8s/apps/.+\\.yaml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\n\\s+\\S+?:\\s?\\'(?<currentValue>[^\\s\\@]+)(\\@(?<currentDigest>\\S+))?\\'"
      ]
    },
    {
      "customType": "regex",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "/k8s/apps/app-of-infrastructure-apps/csi-nfs\\.yaml$/"
      ],
      "matchStrings": [
        "(?ms)^(?<indentation>\\s*)repository:\\s*'(?<packageName>[^']+)'[\\s]*?tag:\\s*'(?<currentValue>[^'@]+)(?:@(?<currentDigest>[^']+))?'",
        "problem when fileFormat missing: https://github.com/renovatebot/renovate/issues/24559"
      ],
      "autoReplaceStringTemplate": "{{indentation}}repository: '{{packageName}}'\n{{{indentation}}}tag: '{{newValue}}{{#if newDigest}}@{{newDigest}}{{/if}}'",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/k8s/apps/.+\\.yaml$/",
        "/k8s-rancher/apps/.+\\.yaml$/"
      ],
      "matchStrings": ["kubernetesVersion: '?(?<currentValue>[^'\\s])+'?\\s*$"],
      "depNameTemplate": "k3s",
      "versioningTemplate": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<compatibility>\\+k3s)(?<build>\\d+)$",
      "datasourceTemplate": "custom.k3s"
    }
  ],
  "customDatasources": {
    "k3s": {
      "defaultRegistryUrlTemplate": "https://update.k3s.io/v1-release/channels",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $$.(data[id = 'stable'].latest),\"sourceUrl\":\"https://github.com/k3s-io/k3s\",\"changelogUrl\":$join([\"https://github.com/k3s-io/k3s/releases/tag/\",data[id = 'stable'].latest])}],\"sourceUrl\": \"https://github.com/k3s-io/k3s\",\"homepage\": \"https://k3s.io/\"}"
      ]
    }
  },
  "ignorePaths": [
    "k8s-old1/**"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "k8s/apps/app-of-apps-apps/*.yaml",
        "k8s/apps/app-of-infrastructure-apps/*.yaml",
        "k8s-rancher/apps/*.yaml"
      ],
      "matchManagers": [
        "argocd",
        "kubernetes",
        "helm-values"
      ],
      "groupName": "{{{replace 'k8s.*\\/(?<FileName>[^/]*)\\.yaml' 'app $<FileName>' packageFile}}}"
    },
    {
      "matchFileNames": [
        "k8s/apps/app-of-apps-apps/*.yaml",
        "k8s/apps/app-of-infrastructure-apps/*.yaml",
        "k8s-rancher/apps/*.yaml"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "{{{replace 'k8s.*\\/(?<FileName>[^/]*)\\.yaml' 'app $<FileName> (regex-match)' packageFile}}}"
    },
    {
      "matchPackageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+\\-[a-z0-9]+)$"
    },
    {
      "matchPackageNames": [
        "ghcr.io/oliver006/redis_exporter"
      ],
      "enabled": true
    }
  ]
}
